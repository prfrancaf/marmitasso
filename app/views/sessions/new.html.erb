<p id="notice"><%= notice %></p>

<h1>Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role:"form"}, url: login_path) do |form| %>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, id: :usuario_email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :usuario_password %>
    </div>

    <div class="actions">
      <%= form.submit "Login" %>
    </div>

<% end %>